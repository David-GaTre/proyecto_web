<!DOCTYPE html>
<html lang = "en" style = "height: 100%;">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://unpkg.com/vue@3"></script>
        <link rel="stylesheet" href="../Style/color_palette.css">
        <link rel="stylesheet" href="../Style/ticketStyle.css">
        <link rel="stylesheet" href="../Style/sidebar.css">
        <meta charset = "UTF-8">
        <title>Tickets</title>
    </head>
    <body class = "h-100">
        <div id = "app" class = "h-100"> 
            <main class = "h-100">
                <headermenu></headermenu>
                <div class="h-100">
                    <div class="row h-100">
                        <!-- Menu lateral -->
                        <sidebar></sidebar>
                    <!-- Tickets -->
                    <div class="col-8">
                        <div v-for = "tickets in grouped_tickets" class = "row">
                            <div v-for = "ticket in tickets" class = "col-sm-10 col-md-6 col-xl-4" style="display: flex; justify-content: center;">
                                <ticket :id = "ticket.id" :user_name="ticket.user_name" :titl = "ticket.title" :favt = "ticket.favour_type" :desc = "ticket.short_desc" :inst = "ticket.instructions" :pric = "ticket.price" :sty="ticket.sty" :but="ticket.but" @assign-ticket="assignTicket($event)"></ticket>
                            </div>
                        </div>
                    </div>
                    <!-- Menu derecho -->
                    <div class="col-2">
                        <br><br><br>
                        <div class="background">
                            <br>
                            <h3 style="text-align: center;"> Tickets activos</h3>
                            <br>
                            <div class="row" style="display: flex; justify-content: center;">
                                <div v-for = "ticketuser in ticketsuser" class = "col-11" >
                                    <ticket :id = "ticketuser.id" :user_name="ticketuser.user_name" :titl = "ticketuser.title" :favt = "ticketuser.favour_type" :desc = "ticketuser.short_desc" :inst = "ticketuser.instructions" :pric = "ticketuser.price" :sty="ticketuser.sty" :but="ticketuser.but" @cancel-ticket="cancelTicket($event)" @complete-ticket="completeTicket($event)"></ticket>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </body>

    <script src="app.component.js"></script>
    <script src="headermenu.component.js"></script>
    <script src="sidebar.component.js"></script>
    <script src="ticket.component.js"></script>
    <script>
        const mountedApp = app.mount('#app');
    </script>
</html>