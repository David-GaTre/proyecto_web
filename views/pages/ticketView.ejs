<!DOCTYPE html>
<html lang = "en" style = "height: 100%;">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://unpkg.com/vue@3"></script>
        <link rel="stylesheet" href="../Style/color_palette.css">
        <link rel="stylesheet" href="../Style/ticketStyle.css">
        <link rel="stylesheet" href="../Style/sidebar.css">
        <meta charset = "UTF-8">
        <title>Tickets</title>
    </head>
    <body class = "h-100">
        <main class = "h-100">
            <div id = "header">
                <nav class="navbar navbar-expand-sm navbar-dark azul-fondo flex-sm-nowrap flex-wrap">
                    <div class="container-fluid">
                        <button class="navbar-toggler flex-grow-sm-1 flex-grow-0 me-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbar5">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                    <img src="../imgs/tecdashlogo.png" width="30" height="30" class="d-inline-block align-top " alt="">
                        <span class="navbar-brand flex-grow-1">Tec Dash</span>
                        <div class="navbar-collapse collapse flex-grow-1 justify-content-right" id="navbar5">
                            <ul class="navbar-nav mx-auto">
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="profile">Usuario</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-white" href="/logout">Cerrar sesion</a>
                                </li>
                                <li class="nav-item">
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </div>

            <div class="h-100">
                <div class="row h-100" id = "app">
                        <!-- Menu lateral -->
                    <div class = "col-2" id = "side-bar">
                        <div class="border-end h-100 blanco-fondo">
                            <div class="list-group list-group-mine">
                                <a class="list-group-item  p-3 azul-fondo" href="/ticket_view">Homepage</a>
                                <a class="list-group-item list-group-item-action p-3 azul-fondo" href="profile">Perfil</a>
                                <a class="list-group-item list-group-item-action p-3 azul-fondo" href="ticket/new">Hacer un pedido</a>
                                <a class="list-group-item list-group-item-action p-3 azul-fondo" href="/logout">Cerrar sesion</a>
                            </div>
                        </div>
                    </div>
                    <!-- Tickets -->
                    <div class="col-8">
                        <div v-for = "tickets in grouped_tickets" class = "row">
                            <div v-for = "ticket in tickets" class = "col-sm-10 col-md-6 col-xl-4" style="display: flex; justify-content: center;">
                                <ticket :id = "ticket.id" :titl = "ticket.title" :favt = "ticket.favour_type" :desc = "ticket.short_desc" :inst = "ticket.instructions" :pric = "ticket.price" @assign-ticket="assignTicket($event)" :sty="ticket.sty"></ticket>
                            </div>
                        </div>
                    </div>
                    <!-- Menu derecho -->
                    <div class="col-2">
                        <br><br><br>
                        <div class="background">
                            <br>
                            <h3 style="text-align: center;"> Tickets activos</h3>
                            <br>
                            <div class="row" style="display: flex; justify-content: center;">
                                <div v-for = "ticketuser in ticketsuser" class = "col-11" >
                                    <ticket :id = "ticketsuser.id" :titl = "ticketuser.title" :favt = "ticketuser.favour_type" :desc = "ticketuser.short_desc" :inst = "ticketuser.instructions" :pric = "ticketuser.price" :sty="ticketuser.sty"></ticket>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </body>

    <script src="app.component.js"></script>
    <script src="ticket.component.js"></script>
    <script>
        const mountedApp = app.mount('#app');
    </script>
</html>