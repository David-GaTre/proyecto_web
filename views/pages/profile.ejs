<!DOCTYPE html>
<html lang = "en" style = "height: 100%;">
    <head>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://unpkg.com/vue@3"></script>
        <link rel="stylesheet" href="./Style/color_palette.css">
        <meta charset = "UTF-8">
        <title>Perfil</title>
    </head>
    <body class = "h-100">
        <div id = "app" class = "h-100">
        <main class = "h-100">
            <headermenu></headermenu>

        <div class="h-100">
            <div class="row h-100">
                    <!-- Menu lateral -->
                    <sidebar></sidebar>
                <div class="col">
            <div id="perfil" style="list-style-type: none;">
                <!-- Row 1 Foto y Primer Set de Datos -->
                <div class="row">
                    <div class="col-xl-3 col-xs-9">
                    </div>
                    <div class="col-xl-3 col-xs-9">
                        <!-- Foto de Perfil -->
                        <img style="width:150px;height:150px;border-radius: 50%;" v-bind:src="img" aria-label= "Foto de perfil del usuario">
                    </div>
                    <div class="col-xl-6 col-xs-12">
                        <!-- Nombre, Correo, Fecha de Nacimiento -->
                        <h5>{{tnombre}}</h5>
                        <h5>{{nombre}}</h5>
                        <br>
                        <h5>{{tcorreo}}</h5>
                        <h5>{{correo}}</h5>
                        <br>
                        <h5>{{tfecha}}</h5>
                        <h5>{{fecha}}</h5>
                    </div>
                </div>
                <!-- Row 2 Boton Editar y Balance -->
                <br>
                <div class="row">
                    <div class="col-xl-3">
                    </div>
                    <div class="col-xl-3">
                        <!-- Boton Editar -->
                        <button class="btn btn-primary">Editar</button>
                    </div>
                    <div class="col-xl-6">
                        <!-- Balance -->
                        <h5>{{tbalance}}</h5>
                        <h5>{{balance}}</h5>
                    </div>
                </div>
                <!-- Row 3 Boton Pagos, Creados y Tomados -->
                <br>
                <div class="row">
                    <div class="col-xl-3">
                    </div>
                    <div class="col-xl-3">
                        <!-- Boton Metodos de Pago -->
                        <button class="btn btn-primary">Metodos de pago</button>
                    </div>
                    <div class="col-xl-3">
                        <!-- Tickets Creados -->
                        <h5>{{tcreados}}</h5>
                        <h5>{{creados}}</h5>
                    </div>
                    <div class="col-xl-3">
                        <!-- Tickets Resuletos -->
                        <h5>{{tresueltos}}</h5>
                        <h5>{{resueltos}}</h5> 
                    </div>
                </div>
            </div>
            </div>
            </div>
        </div>
        </main>
        </div>
        <script src="Proyecto perfil.js"></script>
        <script src="app.component.js"></script>
        <script src="headermenu.component.js"></script>
        <script src="sidebar.component.js"></script>
        <script>
            const mountedApp = app.mount('#app');
        </script>
    </body>