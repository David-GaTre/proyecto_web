<!DOCTYPE html>
<html lang = "en">
    <head>
        <link rel="stylesheet" type="text/css" href="Proyecto_homepage.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js"></script>
        <script src="https://unpkg.com/vue@3"></script>
        <meta charset = "UTF-8">
        <title>Homepage</title>
    </head>
    <body>
        <main>
            <div id="homeTop" style="list-style-type: none; font-family: roboto;">
                <!-- Top: logo, user, pass, login -->
                <div class="row">
                    <div class="col-xl-5 col-md-5 col-sm-11">
                        <!-- logo de la empresa -->
                        <img style="width:450;height:100px;" v-bind:src="logo" aria-label= "logo de la app">
                    </div>
                    <div class="col-xl-2 col-md-2 col-sm-3">
                        <!-- textbox usuario -->
                        <br>
                        <input type="text" class="form-control" v-model="user" placeholder="Username" />
                    </div>
                    <div class="col-xl-2 col-md-2 col-sm-3">
                        <!-- textbox password -->
                        <br>
                        <input type="password" class="form-control" v-model="pass" placeholder="Password" />
                    </div>
                    <div class="col-xl-2 col-sm-3">
                        <!-- boton login -->
                        <br>
                        <button class="btn btn-primary" style="background-color:#161925" @click="handleLogin">{{ login }}</button>
                    </div>
                    <div class="col-1">
                    </div>
                </div>
            </div>
            <div id="homeBot" style="list-style-type: none; font-family: roboto;">
                <!-- Bot: imagen, descripcion, registro -->
                <div class="row">
                    <div class="col-xl-6 col-sm-10">
                        <!-- imagen y descripcion -->
                        <div class="row">
                            <!-- imagen -->
                            <div class="col-xl-1">
                            </div>
                            <div class="col-xl-10">
                                <br>
                                <br>
                                <img style="width: 95%; height: 95%;" v-bind:src="img" aria-label= "imagen de fondo">
                            </div>
                            <div class="col-xl-1">
                            </div>
                        </div>
                        <div class="row">
                            <!-- descripcion -->
                            <div class="col-xl-1">
                            </div>
                            <div class="col-xl-10">
                                <br>
                                <p> {{ desc }}</p>
                            </div>
                            <div class="col-xl-1">
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-5 col-sm-10">
                        <!-- registro -->
                        <br>
                        <div id="registro" @submit.prevent="handleSubmit">
                            <div class="row">
                                <!-- nombre -->
                                <div class="col-xl-1">
                                </div>
                                <div class="col-xl-10">
                                    <br>
                                    <p>Nombre</p>
                                    <input type="text" class="form-control" v-model="nombre"/>
                                </div>
                                <div class="col-xl-1">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <!-- correo -->
                                <div class="col-xl-1">
                                </div>
                                <div class="col-xl-10">
                                    <p>Correo</p>
                                    <input type="text" class="form-control" v-model="correo"/>
                                </div>
                                <div class="col-xl-1">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <!-- fecha -->
                                <div class="col-xl-1">
                                </div>
                                <div class="col-xl-10">
                                    <p>Fecha de nacimiento</p>
                                    <input type="date" class="form-control" v-model="fecha"/>
                                </div>
                                <div class="col-xl-1">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <!-- contraseña -->
                                <div class="col-xl-1">
                                </div>
                                <div class="col-xl-10">
                                    <p>Contraseña</p>
                                    <input type="password" class="form-control" v-model="pass"/>
                                </div>
                                <div class="col-xl-1">
                                </div>
                            </div>
                            <br>
                            <div class="row">
                                <!-- confirmar contraseña -->
                                <div class="col-xl-1">
                                </div>
                                <div class="col-xl-10">
                                    <p>Confirmar Contraseña</p>
                                    <input type="password" class="form-control" v-model="passcon"/>
                                </div>
                                <div class="col-xl-1">
                                </div>
                                <br>
                            </div>
                            <br>
                            <div class="row">
                                <!-- boton registrarse -->
                                <div class="col-xl-5">
                                </div>
                                <div class="col-xl-2">
                                    <button class="btn btn-primary" @click="handleSubmit">{{ registro }}</button>
                                </div>
                                <div class="col-xl-5">
                                </div>
                                <br>
                                <p v-if="equal && boton">Usuario creado exitosamente</p>
                                <p v-if="!equal && boton">Las contraseñas deben ser iguales</p>
                            </div>
                            <br>
                        </div>
                    </div>
                    <div class="col-xl-1">
                    </div>
                </div>
            </div>
            <script type="text/javascript">
                $(function() {
                    $('#datepicker').datepicker({ dateFormat: 'yy-mm-dd' });
                });
            </script>
        </main>
        <script src="Proyecto_homepage.js"></script>
    </body>